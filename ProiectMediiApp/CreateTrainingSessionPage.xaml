<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectMediiApp.CreateTrainingSessionPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Create Training Session" FontSize="Large" HorizontalOptions="Center" />

            <DatePicker x:Name="DatePicker" />
            <Entry x:Name="DescriptionEntry" Placeholder="Description" />
            <Entry x:Name="DurationEntry" Placeholder="Duration (minutes)" Keyboard="Numeric" />

            <Picker x:Name="TrainerPicker" Title="Select Trainer">
               
            </Picker>

            <Picker x:Name="LocationPicker"
        Title="Select Location" />


                <Button Text="Save Session" BackgroundColor="Purple" TextColor="White" Clicked="OnSaveSessionClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
