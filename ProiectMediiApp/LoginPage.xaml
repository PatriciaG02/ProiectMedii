<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectMediiApp.LoginPage">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Label Text="Login" 
               FontSize="24" 
               HorizontalOptions="Center" 
               Margin="0,20,0,20" />

        <Entry Placeholder="Username" x:Name="UsernameEntry" />
        <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" />

        <Label x:Name="ErrorMessage" TextColor="Red" IsVisible="False" />

        <Button Text="Login" Clicked="OnLoginClicked" />
    </StackLayout>
</ContentPage>
