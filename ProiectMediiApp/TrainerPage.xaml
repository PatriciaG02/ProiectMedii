<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectMediiApp.TrainerPage"
             Title="Trainer Details">

    <StackLayout Padding="20">
        <!-- Câmp pentru numele antrenorului -->
        <Entry Placeholder="Name" Text="{Binding Name}" />

        <!-- Câmp pentru specializare -->
        <Entry Placeholder="Specialization" Text="{Binding Specialization}" />

        <!-- Câmp pentru telefon -->
        <Entry Placeholder="Phone" Text="{Binding Phone}" />

        <!-- Butoane pentru salvare și ștergere -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Save" Clicked="OnSaveButtonClicked" />
            <Button Text="Delete" Clicked="OnDeleteButtonClicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>
